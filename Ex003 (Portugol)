//Função do Algoritmo: Calcular a média aritmética
//Autor:Felipe Verissimo

programa
{
	
	funcao inicio()
	{
		real nota1,nota2,nota3,nota4,media
		cadeia aluno

		escreva("Qual o seu nome? ")
		leia(aluno)
		escreva("Qual a sua 1ª nota? ")
		leia(nota1)
		escreva("Qual a sua 2ª nota? ")
		leia(nota2)
		escreva("Qual a sua 3ª nota? ")
		leia(nota3)
		escreva("Qual a sua 4ª nota? ")
		leia(nota4)

		media = (nota1+nota2+nota3+nota4)/4
		escreva("Sua média é: " + media)
          //Verifica se a média é maior ou igual a 7
		se (media >= 7) {
			escreva("\n"+"Parabéns!Você foi aprovado")
		}
		//Caso a média seja menor que 7
		senao {
			escreva("\n"+"Infelizente você foi reprovado")
		}
	}
}
