//Exercises to understanding abaut Matrices and Vectors

programa
{
	
	funcao inicio()
	{
		cadeia frutas[4]
          inteiro contador = 0
		
		frutas[0] = "Maçã"
		frutas[1] = "Pêra"
		frutas[2] = "Uva"
		frutas[3] = "Java"

		faca{

			escreva(frutas[contador] + "\n")
			contador++
		}enquanto(contador<=3)
	}
}
